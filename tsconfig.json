{
    "compilerOptions": {
      "declaration": true,
      "rootDir": "src",
      "outDir": "dist",
      "noImplicitAny": false,
      "lib": [ "es2017" ],
      "module": "commonjs",
      "target": "es2017",
      "allowJs": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "./*.js",
      "./dist/*"
    ]
}
